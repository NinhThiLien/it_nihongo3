<% provide(:title, 'Create Book') %>
<% provide(:button_text, 'Create Book') %>
<h1>Create Book </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@book) do |b| %>

      <%= b.label :title %>
      <%= b.text_field :title, class: 'form-control' %>

      <%= b.label :author %>
      <%= b.text_field :author, class: 'form-control' %>

      <%= b.label :issue_date %>
      <%= b.date_field :issue_date, class: 'form-control' %>

      <%= b.label :publishing_company %>
      <%= b.text_field :publishing_company, class: 'form-control' %>

      <%= b.label :description %>
      <%= b.text_field :description, class: 'form-control' %>

      <%= b.label :category_id %>
      <%= b.text_field :category_id, class: 'form-control' %>
      
      <%= b.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
  </div>
</div>